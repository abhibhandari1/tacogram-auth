<div class="row">
  <% for post in @posts %>
    <div class="col-3">
      <h4>
        <%= post["user_id"] %>
      </h4>
      <img class="img-fluid" src="<%= post["image"] %>" class="w-full">
      <p><%= post["body"] %></p>
      
      <% if @current_user %>

        <h3>Comments</h3>

        <ul>
          <% for comment in @comments %>
            <li>
              <%= comment["comment"] %>
            </li>
          <% end %>
        </ul>

        <h4>New Comment</h4>

        <%= form_with :model => @activity do |form| %>
          <%= form.hidden_field "user_id" %>
          <p>
            <%= @user["first_name"] %> <%= @user["last_name"] %>
          </p>
          <p>
            <%= form.label "comment" %>
            <%= form.text_area "comment" %>
          </p>
          <%= form.submit %>
        <% end %>

        <% else %>

        Login to see comments


<% end %>
    </div>
  <% end %>
</div>